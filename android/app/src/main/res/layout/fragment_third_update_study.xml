<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.created.team201.presentation.updateStudy.UpdateStudyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_third_update_study_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/third_update_study_name_title"
            android:textAppearance="@style/title_sb22"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_third_update_study_name_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/third_update_study_name_information"
            android:textAppearance="@style/subtitle_r16"
            android:textColor="@color/grey02_78808B"
            app:layout_constraintEnd_toEndOf="@id/tv_third_update_study_name_title"
            app:layout_constraintStart_toStartOf="@id/tv_third_update_study_name_title"
            app:layout_constraintTop_toBottomOf="@id/tv_third_update_study_name_title" />

        <EditText
            android:id="@+id/et_third_update_study_name"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rectangle_radius_5dp"
            android:gravity="top"
            android:hint="@string/updateStudy_study_hint_name"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLength="30"
            android:maxLines="3"
            android:onTextChanged="@{(text, start, before, count) -> viewModel.setName(text.toString())}"
            android:padding="12dp"
            android:text="@{viewModel.name}"
            android:textAppearance="@style/title_b20"
            android:textColor="@color/white"
            android:textColorHint="@color/grey02_78808B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_third_update_study_name_information" />

        <TextView
            android:id="@+id/tv_third_update_study_introduction_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/third_update_study_introduction_title"
            android:textAppearance="@style/title_sb22"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_third_update_study_name" />

        <TextView
            android:id="@+id/tv_third_update_study_introduction_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/third_update_study_introduction_information"
            android:textAppearance="@style/subtitle_r16"
            android:textColor="@color/grey02_78808B"
            app:layout_constraintEnd_toEndOf="@id/tv_third_update_study_introduction_title"
            app:layout_constraintStart_toStartOf="@id/tv_third_update_study_introduction_title"
            app:layout_constraintTop_toBottomOf="@id/tv_third_update_study_introduction_title" />

        <EditText
            android:id="@+id/et_third_update_study_introduction"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rectangle_radius_5dp"
            android:gravity="top"
            android:hint="@string/updateStudy_study_hint_introduction"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLength="200"
            android:maxLines="7"
            android:onTextChanged="@{(text, start, before, count) -> viewModel.setIntroduction(text.toString())}"
            android:padding="12dp"
            android:text="@{viewModel.content}"
            android:textAppearance="@style/text_r16"
            android:textColor="@color/white"
            android:textColorHint="@color/grey02_78808B"
            app:layout_constraintEnd_toEndOf="@id/tv_third_update_study_introduction_information"
            app:layout_constraintStart_toStartOf="@id/tv_third_update_study_introduction_information"
            app:layout_constraintTop_toBottomOf="@id/tv_third_update_study_introduction_information" />

        <TextView
            android:id="@+id/tv_third_update_study_btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bg_btn_color_and_radius_10dp_disabled"
            android:paddingVertical="14dp"
            android:enabled="@{viewModel.isEnableCreateStudy}"
            android:text="@string/updateStudy_button_created"
            android:textAlignment="center"
            android:textAppearance="@style/button_sb20"
            android:textColor="@color/tv_color_disabled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
