<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.created.team201.presentation.createStudy.CreateStudyViewModel" />

        <variable
            name="changeListener"
            type="com.created.team201.presentation.createStudy.custom.PickerChangeListener" />

        <variable
            name="minValue"
            type="Integer" />

        <variable
            name="maxValue"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_top_radius_20dp"
        android:backgroundTint="@color/black02_181B21"
        app:behavior_draggable="false"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/view_create_study_people_count"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rectangle_radius_5dp"
            android:backgroundTint="@color/grey02_78808B"
            app:layout_constraintDimensionRatio="W, 10:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.created.team201.presentation.createStudy.custom.PeopleCountPicker
            changeListener="@{changeListener}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_create_study_people_count"
            app:maxValue="@{maxValue}"
            app:minValue="@{minValue}"
            app:value="@{viewModel.peopleCount}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
