<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rectangle_radius_10dp"
        android:minWidth="300dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_dialog_setting_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/title_b20"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="회원 탈퇴" />

        <TextView
            android:id="@+id/tv_dialog_setting_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/text_r14"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_setting_title"
            tools:text="서비스를 탈퇴하시면 스터디 이력, 업적 배지를 비롯한 모든 회원 정보가 삭제되며 다시 복구할 수 없습니다." />

        <TextView
            android:id="@+id/tv_dialog_setting_btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/bg_rectangle_only_radius_10dp"
            android:backgroundTint="@color/green01_4039D353"
            android:paddingVertical="10dp"
            android:text="@string/setting_dialog_btn_ok_text"
            android:textAlignment="center"
            android:textAppearance="@style/button_sb16"
            android:textColor="@color/white01_66FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/tv_dialog_setting_btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_setting_content" />

        <TextView
            android:id="@+id/tv_dialog_setting_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/bg_rectangle_only_radius_10dp"
            android:backgroundTint="@color/green02_E639D353"
            android:paddingVertical="10dp"
            android:text="@string/setting_dialog_btn_cancel_text"
            android:textAlignment="center"
            android:textAppearance="@style/button_sb16"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_dialog_setting_btn_ok"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_setting_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
